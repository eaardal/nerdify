{
  "name": "nerdify",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf public",
    "copy-ghmarkdown": "copyfiles -f node_modules/github-markdown-css/github-markdown.css ./public/",
    "copy-highlightjs": "copyfiles -f node_modules/highlightjs/styles/*.css ./public/highlightjs/",
    "copy-all": "npm run copy-ghmarkdown && npm run copy-highlightjs",
    "start": "npm run copy-all && nodemon src/server.js",
    "build-css": "node-sass --include-path sass sass/nerdschool.scss public/nerdschool.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.16.1",
    "copyfiles": "^1.2.0",
    "express": "^4.14.1",
    "github-markdown-css": "^2.4.1",
    "highlightjs": "^9.8.0",
    "marked": "^0.3.6",
    "morgan": "^1.8.1",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-beta11",
    "request": "^2.79.0"
  }
}
